<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/sadique" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/card"
        android:textAllCaps="true"
        android:layout_marginTop="2dp"
        android:text="SADIQUE REYAZ"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:fontFamily="monospace"
        android:text="Android Developer"
        android:textColor="#006064"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_toEndOf="@id/card"
        android:layout_below="@id/position"
        android:text="I am a developer of this app. Currently persuing Computer Engineering in 2nd year." />

    <ImageView
        android:id="@+id/linked"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/linkedinlogo"
        android:layout_below="@id/bio"
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/card"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linkInAcc"
        android:textColor="#0066C7"
        android:text="@string/accountname"
        android:layout_marginTop="4dp"
        android:textStyle="italic"
        android:layout_toEndOf="@id/linked"
        android:layout_below="@id/bio"/>

</RelativeLayout>